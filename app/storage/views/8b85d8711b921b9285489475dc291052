				<tr>
					<td><?php echo e($don_vi->ma_don_vi); ?></td>
					<td><?php echo e($don_vi->ten_don_vi); ?></td>
					<td><?php echo e($don_vi->ghi_chu); ?></td>
                    <td><?php echo link_to_route('don_vis.edit', 'Edit', array($don_vi->id), array('class' => 'btn btn-info')); ?></td>
                    <td>
                        <?php echo Form::open(array('method' => 'DELETE', 'route' => array('don_vis.destroy', $don_vi->id))); ?>
                            <?php echo Form::submit('Delete', array('class' => 'btn btn-danger')); ?>
                        <?php echo Form::close(); ?>
                    </td>
				</tr>
			<?php endforeach; ?>
		</tbody>
