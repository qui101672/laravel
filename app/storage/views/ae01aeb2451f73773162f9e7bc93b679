
<?php $__env->startSection('main'); ?>

<h1>All Bai_hats</h1>

<p><?php echo link_to_route('bai_hats.create', 'Add new bai_hat'); ?></p>

<?php if ($bai_hats->count()): ?>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Ma_bai_hat</th>
				<th>Ten_bai_hat</th>
				<th>Nam_sang_tac</th>
				<th>Ghi_chu</th>
			</tr>
		</thead>

		<tbody>
			<?php foreach ($bai_hats as $bai_hat): ?>
				<tr>
					<td><?php echo e($bai_hat->ma_bai_hat); ?></td>
					<td><?php echo e($bai_hat->ten_bai_hat); ?></td>
					<td><?php echo e($bai_hat->nam_sang_tac); ?></td>
					<td><?php echo e($bai_hat->ghi_chu); ?></td>
                    <td><?php echo link_to_route('bai_hats.edit', 'Edit', array($bai_hat->id), array('class' => 'btn btn-info')); ?></td>
                    <td>
                        <?php echo Form::open(array('method' => 'DELETE', 'route' => array('bai_hats.destroy', $bai_hat->id))); ?>
                            <?php echo Form::submit('Delete', array('class' => 'btn btn-danger')); ?>
                        <?php echo Form::close(); ?>
                    </td>
				</tr>
			<?php endforeach; ?>
		</tbody>
	</table>
<?php else: ?>
	There are no bai_hats
<?php endif; ?>

<?php $__env->stopSection(); ?>

<?php echo $__env->make('layouts.admin', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>