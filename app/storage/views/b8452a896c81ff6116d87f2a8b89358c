			</tr>
		</thead>
		<tbody>
			<?php foreach ($lops as $lop): ?>
				<tr>
					<td><?php echo e($lop->ma_lop); ?></td>
					<td><?php echo e($lop->ten_lop); ?></td>
					<td><?php echo e($lop->so_luong); ?></td>
